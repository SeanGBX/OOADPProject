    <!-- Heading title -->

   

    <!-- Page Content -->
<div class="card shadow-sm mb-5 bg-white rounded" style="margin-top: 30px">
    <section class="py-5">
        <div class="container align-items-center">
            <div class="text-center">
                <div>
                    <h1 class="brushfont">{{ user.username }}</h1>
                    <button type="button" onclick="window.location.href='/shop/addItems'" class="btn btn-success btn-lg">Add Item</button>
                    <p>Featured Products</p>
                </div>
                <br>
                <br>
                <br>

                <!-- Products -->

                <div class="container">
                {{#if shops}}
                    <div>
                        <div class="row"></div>
                        {{#each shops}}

                        
                            <div class="column">
                                <div class="card">
                                    <a href="{{posterURL}}" data-title="{{title}}" data-toggle="lightbox">
                                        <img src="{{posterURL}}" alt="Poster unavailable" onerror="this.src='/images/no-image.jpg'" class="img-thumbnail img-fluid card-img-top image1">
                                    </a>
                                    <a href="{{posterURL2}}" data-title="{{title}}" data-toggle="lightbox2">
                                        <img src="{{posterURL2}}" alt="Brand unavailable" onerror="this.src='/images/no-image.jpg'" class="img-thumbnail img-fluid image2">
                                    </a>
                                    <div class="card-body">

                                        <h5 class="card-title">{{title}}</h5>
                                        <p class="card-text">{{story}}</p>
                                        <!-- Button -->

                                        <a role="button" href="/shop/delete/{{id}}" class="btn btn-danger">Delete Item</a>
                                        <a role="button" href="/shop/editItems/{{id}}" class="btn btn-info">Edit Item</a>
                                        
                                    </div>
                                </div>
                            </div>
                        
                        



                        {{/each}}
                    </div>

                </div>
                {{else}}
                    <h3>No shops found</h3>
                {{/if}}

                

            </div>
        </div>
    </section>
</div>

