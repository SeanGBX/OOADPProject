<div class="container">
    <div class="card card-body">
        <h3>Add Item</h3>
        <form action="/shop/addItems" method="post" id="addItem">
            <div class="form-group">

                <div class="form-group mb-4">
                    <label class="font-italic" for="title">Item Name</label>
                    <textarea class="form-control" id="title" name="title" rows="1" value="{{shop.title}}"></textarea>
                </div>


            </div>
            <div class="form-group mb-4">
                <label class="font-italic" for="story">Description</label>
                <textarea class="form-control" id="story" name="story" rows="7" value="{{shop.story}}"></textarea>
            </div>

            <div class="form-group mb-4">
                <label class="font-italic" for="link">Website</label>
                <textarea class="form-control" id="link" name="link" rows="1" value="{{shop.link}}"></textarea>
            </div>

