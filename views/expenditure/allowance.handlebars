		<h3>Allowance</h3>
		<form action="" method="post" id="addVideo">
			<div class="form-group">
				{{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="story">Current Balance</label>
				<textarea class="form-control" id="story" name="story" rows="4" disabled >{{money}}</textarea>
			</div>

			<div class="form-group">

				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
