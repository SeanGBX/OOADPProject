<div class="container">
	<div class="card card-body">
		<h3>Fridge Storage</h3>
		<form action="" method="post" id="addVideo">
			<div class="form-group">
				{{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="story">Items</label>
		    {{#if items}}
			{{#each items}}
				<div class="row">
                			    <div class = "col-12 col-sm-12 col-md-6 col-lg-4">
                				<textarea class="form-control" id="story" name="story" rows="1" style = 'text-align : center' disabled>{{name}} </textarea>
                				</div>
                				<div class = "col-12 col-sm-12 col-md-6 col-lg-3">
                				<textarea class="form-control" id="story" name="story" rows="1" disabled> Expires at </textarea>
                				</div>
                				<div class = "col-12 col-sm-12 col-md-6 col-lg-3">
                				<textarea class="form-control" id="story" name="story" rows="1" style = 'text-align : center' disabled> {{expireDate_string}} </textarea>
                				</div>
                				<div class="col-sm-12 col-md-12 col-lg-2">
                                	<p class="font-italic"></p>
                                	<a href="" class="card-link" data-toggle="confirmation"
                                	data-title="Confirm delete?">
                                	<i class="far fa-trash-alt"></i>
                                	Delete
                                	</a>
                                </div>
                			</div>
			{{/each}}
				{{/if}}
			</div>

			<div class="form-group">

				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
	                    <label class="font-italic">Enter Item Name</label><br>
	                    <textarea class="form-control" id="newItem" name="newItem" rows="1"></textarea>
                    </div>
                    </div>

	                    <div class="row mb-2">
                           <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                           <label class="font-italic">Enter Quantity</label><br>
                           <textarea class="form-control" id="newQuantity" name="newQuantity" rows="1"></textarea>
                           </div>
                       </div>
						<label class="font-italic">ExpiryDate</label>
						<input id="datepicker" width="200" name="dateRelease" readonly/>

					<div class="col-12 col-sm-12 col-md-12 col-lg-6">
						<label class="font-italic"></label>
						<br>
					{{!-- Practical 5 Exercise 2: Language radio buttons here'--}}
					</div>
				</div>


			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Default category</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="chinese" value="Fruit">
							<label class="form-check-label" for="chinese">Fruit</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="english" value="Drinks">
							<label class="form-check-label" for="englishLang">Drinks</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="malay" value="Meat">
							<label class="form-check-label" for="malay">Meat</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="subtitles" id="tamil" value="Groceries">
							<label class="form-check-label" for="tamil">Groceries</label>
						</div>

						{{!--<div class="form-check form-check-inline">
							<div class="form-group">
								<input type="text" class="form-control form-control-sm" name="otherSub" id="otherSub" placeholder="Other">
							</div>
						</div>--}}
					</div>


					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Warning System</label>
						<br>
                        <div class="form-check form-check-inline">
                        	<input class="form-check-input" type="checkbox" id="G" value="SMS" name="classification" checked>
                        	<label class="form-check-label" for="G">SMS</label>
                        </div>
                        <div class="form-check form-check-inline">
                        	<input class="form-check-input" type="checkbox" id="PG" value="EMAIL" name="classification">
                        	<label class="form-check-label" for="PG">E-mail</label>
                        </div>
					</div>
				</div>

			</div>
			<br>
			<button id="butAddVideo" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>

</div>

<script>
		$('#datepicker').datepicker({
			format: 'yyyy/mm/dd',
			value: new Date().toLocaleDateString('en-AUS'),
			uiLibrary: 'bootstrap4',
		})
</script>