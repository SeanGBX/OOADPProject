<script src="moment.js"></script>
<link rel="stylesheet" href="/css/newreminder.css">

<div class="card shadow-sm mb-5 bg-white rounded">
    <div class="card-header">
        <div class="card-title">
            <h3 class="text-center" style="text-decoration: underline"> Your Reminders</h3>
        </div>
        <div class="row">
            <div class='col'>
                <h3 class="card-title text-center">{{{timeformat date}}}</h3>
            </div>
        </div>
    </div>
    <br>
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item" onclick="window.location.href='/reminder/newreminder'">
                        <a class="newr" style="padding-left:28px" href = '/reminder/newreminder'
                           >New Reminders</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <div class="form-check" id="borderDiv">

                {{#if reminderlists}}
                {{#each reminderlists}}

                <a href='/reminder/edit/{{id}}' class="btn btn-success"
                    style="float : right; margin-right:10px;">edit</a>
                <a href="/reminder/delete/{{id}}" class="card-link" data-toggle="confirmation"
                    style="float : right; margin-right:10px;" data-title="Confirm delete?">
                    <i class="far fa-trash-alt"></i>
                    Delete
                </a>
                <div>
                    {{{timeformat date}}}
                    <h3>Category:{{category}}</h3>
                    <br>
                    <h3>Food:{{food}}</h3>
                    <br>
                    <h3>Quantity:{{quantity}}</h3>
                    <br>

                    <hr style="height:1px; border:0px; color:#000; background-color:#000;">
                    {{/each}}
                    {{else}}

                    {{/if}}


                </div>
            </div>
        </div>


</div>
</div>
