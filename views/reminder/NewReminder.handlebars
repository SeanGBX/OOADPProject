<link rel="stylesheet" href="/css/newreminder.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js"></script>
<form action= "" method = "POST" >
<div class="col-xs-12">
    <div class="col-md-12">
        <h3> Actions</h3>
        <div id="fieldcurr">
            <div id="field0">
                <!-- Select-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="action_id">Category</label>
                    <div class="col-md-5">
                        <select name ="foodcategory" id="select">
                            {{#each foodcategory}}
                            <option>{{foodcategory}}</option>
                            {{/each}}
                        </select>   
                    </div>
                </div>
                <br><br>
                <!-- Select-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="action_name">Food</label>
                    <div class="col-md-5">
                        <select name="fooditem" id ="selectpicker">
                            {{#each fooditem}}
                            <option>{{fooditem}}</option>
                            {{/each}}
                        </select>

                    </div>
                </div>
                <br><br>
                <!--  Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="action_json">Measurement</label>
                    <div class="col-md-4">
                        <input name = "measurements" id = "measurements" class="form-control" type="text" placeholder="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" id="Add-Rem" class="btn btn-success">Submit</button>
    <button type="button" class="btn btn-danger" onclick="window.location.href = '/reminder/listreminder'">Back</button>
</div>
</div>
</form>
<script>
$("#selectpicker").select2( {
 placeholder: "Select Food",
 allowClear: true
 } );
 $("#select").select2( {
 placeholder: "Select Category",
 allowClear: true
 } );
</script>