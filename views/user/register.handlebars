	<div class="col-md-6 mx-auto" style="padding-top: 20px">
		<div class="card card-body">
			<div class="panel-heading">
				<div class="row">
					<div class="col" style="text-align: center">
						<a href="/showlogin" action="" class="" id="login-form-link">Login</a>
					</div>
					<div class="col" style="text-align: center">
						<a id="login-form-link">Register</a>
					</div>
				</div>
				<hr>
			</div>
			<img class="logo" src="/img/logo.png">
			<h3 class="text-center" style="padding-bottom:10px">Account Register</h3>
			<div class="panel-body">
				<div class="row">
					<div class="col">
						<form id="login-form" action="/user/register" method="post" style="display: block;">
							<div class="form-group">
								<input type="text" name="username" value ="{{username}}" id="username" tabindex="1" class="form-control"
									placeholder="Username" required>
							</div>
							<div class="form-group">
								<input type="email" name="email" value ="{{email}}" id="email" tabindex="2" class="form-control"
									placeholder="Email" required>
							</div>
							<div class="form-group">
								<input type="password" name="password" value ="{{password}}" id="password" tabindex="3" class="form-control"
									placeholder="Password" required>
							</div>
							<div class="form-group">
								<input type="password" name="password2" value ="{{password2}}" id="password2" tabindex="4" class="form-control"
									placeholder="Confirm Password" required>
							</div>
							<div class="form-group">
								<input type="radio" id="User" value="User" name="classification"
									{{radioCheck user.classification 'User'}} checked>User
								<input type="radio" id="Admin" value="Admin" name="classification"
									{{radioCheck user.classification 'Admin'}}>Admin
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

