<!--View for listing fridge-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
    integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<link rel="stylesheet" href="/css/listfridge.css">
<div class="card shadow-sm p-3 mb-5 bg-white rounded" style="margin-top: 30px">
    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <h2 style="text-align:center;">Your Fridge</h3>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <a href="/fridge/editfridge"
                style="display:inline-block; float:right; padding-right:16px; padding-top:10px;">Edit</a>
        </div>

    </div>
        <hr>
        <ul id="myUL2">
            <li>
                <form action="/fridge/search" class="search-form" id="search-form">
                    <div class="input-group md-form form-sm form-1 pl-0" style="padding-bottom:20px;">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-text1" onclick="document.getElementById('search-form').submit()"><i class="fas fa-search "
                                    aria-hidden="true"></i></span>
                        </div>
                        <input class="form-control my-0 py-1" name="term" type="text" placeholder="Search"
                            aria-label="Search">
                    </div>
                </form>
            </li>
            <li>
                <div class="card-text"><a href="/fridge/addcategory"><img src="/img/add2.png"
                            style="width: 28px;margin-right: 8px; display:inline-block; margin-bottom:4px; !important">
                        <h5 style="display:inline-block; font-weight:normal;">Add Category</h5>
                    </a>
                </div>
            </li>
        </ul>
        
        {{#categories}}
        <div class="accordion" id="foodAccordion{{DISTINCT}}" style="padding-bottom:10px;">
            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#food{{DISTINCT}}"
                aria-expanded="false" aria-controls="collapseOne">
                {{DISTINCT}}
            </button>
            <div id="food{{DISTINCT}}" class="collapse" aria-labelledby="headingOne"
                data-parent="#foodAccordion{{DISTINCT}}">
                <div style="padding-left: 16px;" class="menu2">
                    <ul id="myUL">
                        <li>
                            <div class="card-text"><a href="/fridge/addfood/{{DISTINCT}}" style="color: blue;"><img
                                        src="/img/add.png" style="width: 22px;margin-right: 8px; margin-bottom:4px;">Add
                                    Food to {{DISTINCT}}</a></div>
                            {{#each ../fridges}}
                            {{{checkcategory ../DISTINCT category fooditem expirydate}}}
                            {{/each}}
                        
                </div>
                </li>
                </ul>
            </div>
        </div>
        {{/categories}}

        
</div>