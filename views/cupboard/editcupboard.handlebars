<!--View for editing of cupboard-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
    integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<link rel="stylesheet" href="/css/listfridge.css">
<div class="card shadow-sm p-3 mb-5 bg-white rounded" style="margin-top: 30px">
    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <i class="fa fa-arrow-left fa-2x" style="padding-top: 10px; padding-left:10px;" aria-hidden="true" onclick="window.location.href='/cupboard/listcupboard'"></i>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
        <h3 style="text-align:center; padding-top:6px;">Edit Cupboard</h3>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
        <a href="/cupboard/listcupboard" style="display:inline-block; float:right; padding-right:16px; padding-top:10px;">Done</a>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-11">
            <form action="/cupboard/editcupboard/search" class="search-form" id="search-form">
                <div class="input-group md-form form-sm form-1 pl-0" style="padding-bottom:20px;">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-text1"
                            onclick="document.getElementById('search-form').submit()"><i class="fas fa-search "
                                aria-hidden="true"></i></span>
                    </div>
                    <input class="form-control my-0 py-1" name="term" type="text" placeholder="Search"
                        aria-label="Search">
                </div>
            </form>
        </div>
        <div class="col-sm-1 col-md-1 col-lg-1" style="margin-left:-20px; padding-right:px;" >
                <button class="btn btn-outline-dark" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-random"></i> Sort
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/cupboard/editcupboard">Expiry Date (Latest)</a>
                    <a class="dropdown-item" href="/cupboard/editcupboard/sort?term=asc">Ascending</a>
                    <a class="dropdown-item" href="/cupboard/editcupboard/sort?term=desc">Descending</a>
                </div>
        </div>
    </div>
        {{#categories}}
        <div class="accordion" id="foodAccordion{{DISTINCT}}">
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#food{{DISTINCT}}"
                aria-expanded="false" aria-controls="collapseOne">
                {{DISTINCT}}
            </button>
            <div id="food{{DISTINCT}}" class="collapse show" aria-labelledby="headingOne"
                data-parent="#foodAccordion{{DISTINCT}}">
                <div style="padding-left: 16px;" class="menu2">
                    <ul id="myUL">
                        {{#each ../cupboards}}                        
                        {{{cupeditcheckcategory ../DISTINCT category fooditem expirydate id quantity}}}
                        {{/each}}
                        <li>
                </div>
                </li>
                </ul>
            </div>
        </div>
        {{/categories}}

    </div>




<script>
// editable on click
$('body').on('click', '[data-editable]', function(){
  
  var $el = $(this);
  var id = $($el).attr('id')
  var $input = $('<form style="display: inline" action="/cupboard/editcupboard/update/'+ id +'?_method=PUT" method="post" id="' + id +'"><input maxlength="50" id="fooditem" name="fooditem" onblur="document.getElementById(\''+ id +'\').submit(); return false;" onfocus=\"this.style.width = ((this.value.length + 2) * 9) + \'px\';\" onkeypress=\"this.style.width = ((this.value.length + 3) * 9) + \'px\';\" /></form>');
  $el.replaceWith($input);
  $('#fooditem').val( $el.text() );
  $('#fooditem').focus();
  
  var save = function(){
    var $p = $('#fooditem').val( $el.text() );
    $input.replaceWith( $p );
    
  };
  var $input2 = $('#fooditem');
  /**
    We're defining the callback with `one`, because we know that
    the element will be gone just after that, and we don't want 
    any callbacks leftovers take memory. 
    Next time `p` turns into `input` this single callback 
    will be applied again.
  */
  $input2.one('blur', save).focus();
  
});
</script>